<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ResturantSystemMaui.Models"
             x:Class="ResturantSystemMaui.Views.AddorEditMenuItem"
             Title="AddorEditMenuItem">
    <ContentPage.BindingContext>
        <local:AddorDeleteMenuItemViewModel />

    </ContentPage.BindingContext>
    
    
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Menu Item Name" Text="{Binding MenuItem.MenuItemName}"></Entry>
            <Entry Placeholder="Price" Text="{Binding MenuItem.Price}"></Entry>
            <Button Text="Save" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>