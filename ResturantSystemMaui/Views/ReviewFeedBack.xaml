<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResturantSystemMaui.Views.ReviewFeedBack"
             Title="ReviewFeedBack">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="ToolbarItem_Clicked_1" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            HorizontalOptions="Center" />
        
            <StackLayout>
                <Editor Text="Please Provide Your Valuable feedback" BackgroundColor="#2c3e50" HeightRequest="100" />

            <Button Text="Save" HorizontalOptions="Center" />
        </StackLayout>
       
    </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>